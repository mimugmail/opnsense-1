<model>
    <mount>//OPNsense/nprobe/general</mount>
    <description>nprobe configuration</description>
    <version>0.0.1</version>
    <items>
        <enabled type="BooleanField">
            <default>0</default>
            <Required>Y</Required>
        </enabled>
        <interface type="InterfaceField">
            <Required>Y</Required>
            <Multiple>N</Multiple>
        </interface>
        <zmqendpoint type="TextField">
            <Required>Y</Required>
            <default>tcp://127.0.0.1:5556</default>
        </zmqendpoint>
        <zmqprobemode type="BooleanField">
            <default>1</default>
            <Required>Y</Required>
        </zmqprobemode>
        <ipsmode type="BooleanField">
            <default>0</default>
            <Required>Y</Required>
        </ipsmode>
        <ips_events type="BooleanField">
            <default>0</default>
            <Required>N</Required>
        </ips_events>
        <zmq_ips_endpoint type="TextField">
            <Required>Y</Required>
            <default>tcp://127.0.0.1:5557</default>
        </zmq_ips_endpoint>
        <ipsconf type="TextField">
            <Required>N</Required>
        </ipsconf>
        <localnet type="CSVListField">
            <Required>N</Required>
        </localnet>  
        <protocols type="OptionField">
                <Required>N</Required>
                <multiple>Y</multiple>
                <OptionValues>
                        <Option1 value="0">Unknown</Option1>
                        <Option2 value="1">FTP Control</Option2>
                        <Option3 value="2">POP3</Option3>
                </OptionValues>
        </protocols>
        <protocolcategory type="OptionField">
                <Required>N</Required>
                <multiple>Y</multiple>
                <OptionValues>
                        <Option1 value="0">No idea</Option1>
                        <Option2 value="1">Need to have</Option2>
                        <Option3 value="2">a look</Option3>
                </OptionValues>
        </protocolcategory>
        <flowrisks type="OptionField">
                <Required>N</Required>
                <multiple>Y</multiple>
                <OptionValues>
                        <Option1 value="1">XSS attack</Option1>
                        <Option2 value="1">SQL injection</Option2>
                        <Option3 value="2">RCE injection</Option3>
                </OptionValues>
        </flowrisks>
    </items>
</model>
